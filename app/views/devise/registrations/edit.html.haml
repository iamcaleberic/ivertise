-if current_user
  =render 'layouts/pheader'
-elsif current_admin
  =render 'layouts/aheader'
.ui.container
  #div{style: 'float: right;'}
    %i.large.home.icon
    =link_to "Home", root_path, class: 'item'

  %br
  %br
  .ui.form
    %h2
      Edit #{resource_name.to_s.humanize}
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .form-group
        -if current_user
          = image_tag(current_user.avatar(:thumb))
        -elsif current_admin
          = image_tag(current_admin.avatar(:thumb))
        %br/
        = f.label :avatar, class: 'col-sm-2 control-label'
        .col-sm-6
          = f.file_field :avatar, class: 'ui button'
      .field
        = f.label :username
        %br/
        = f.text_field :username
      .field
        = f.label :names
        %br/
        = f.text_field :names, autofocus: true
      .field
        = f.label :email
        %br/
        = f.email_field :email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field
        .three.fields
          .field
            = f.label :phone
            %br/
            = f.text_field :phone

          .field
            = f.label :country
            %br/
            = f.text_field :country

          .field
            = f.label :date_of_birth
            %br/
            = f.text_field :date_of_birth

      .field
        .three.fields
          .field
            = f.label :gender
            %br/
            = f.text_field :height
          .field
            = f.label :height
            %br/
            = f.text_field :height
          .field
            = f.label :weight
            %br/
            = f.text_field :weight

      .field
        .three.fields
          .field
            = f.label :city
            %br/
            = f.text_field :city
          .field
            = f.label :bust
            %br/
            = f.text_field :bust
          .field
            = f.label :waist
            %br/
            = f.text_field :waist

      .field
        .two.fields
          .field
            = f.label :eye_color
            %br/
            = f.text_field :eye_color
          .field
            = f.label :shoe_size
            %br/
            = f.text_field :shoe_size
      -if current_user.role.name== "model"
        .field
          .three.fields
            .field
              = f.label :experience
              %br/
              = f.text_field :experience
            .field
              = f.label :job_interest
              %br/
              = f.text_field :job_interest
            .field
              = f.label :dislikes
              %br/
              = f.text_field :dislikes     
      -if current_user.role.name== "MUA"
        .field
          .three.fields
            .field
              = f.label :mua_type
              %br/
              = f.text_field :mua_type
      .field
        = f.label :password
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "off"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off"
      .field
        = f.label :current_password
        %i (we need your current password to confirm your changes)
        %br/
        = f.password_field :current_password, autocomplete: "off"
        
      .actions
        = f.submit "Update", class: 'ui green button'
    