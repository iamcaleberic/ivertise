= render 'home/menu'

:css
  .top{
    margin-top: 5%;
  }

.top
  #masonry-grid{style: 'margin-left: 6%;'}
    %center
      -@pic.each do |p|
        #picha
          .ui.card
            .image
              = image_tag p.image(:large)



-if current_user.role.name=="admin"
  .ui.vertical.menu
    .item
      .header Images
      .menu
        =link_to "Pending approval" , photos_pending_path , class: "item"
        =link_to "Disapproved" , photos_disapproved_path , class: "item"
    .item
      .header All Users
      .menu
        %a.item Contributors
        %a.item Models
        %a.item Photographers
        %a.item MUAs
    .item
      .header Content
      .menu
        %a.item.active Terms
        %a.item Privacy    
        %a.item FAQs

:javascript
  $(document).ready(function(){
    var $container = jQuery('#masonry-grid');
    // initialize
    $container.imagesLoaded(function(){
      $container.masonry({
        columnWidth: 50,
        itemSelector: '#picha'
      });
    });
  });
  
